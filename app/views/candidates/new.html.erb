<html>
  <head>
    <meta charset="UTF-8">

  <h1>Add Candidates</h1>
</head>
  <body>
  <div class="flex">
    <!--  判斷是否有錯誤訊息-->
    <% if @candidate.errors.any? %>
    <ul>
      <!--印出錯誤訊息-->
      <% @candidate.errors.full_messages.each do |messages| %>
        <li><%= messages %>></li>
        <% end %>
    </ul>
    <% end %>


  <%= form_for(@candidate) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :party %>
    <%= form.text_field :party %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>

  <div>
    <%= form.label :politics %>
    <%= form.text_area :politics %>
  </div>
    <%= form.submit %>
  <% end %>
  </div>
  </body>

</html>